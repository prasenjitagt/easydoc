generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type DoctorsClinic {
  fromTime String
  locatin  String
  toTime   String
  weekday  String
}

model doctor {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  about          String
  clinic         DoctorsClinic[]
  experience     Int
  fee            Int
  imgUrl         String
  name           String
  qualification  String
  specialization String

  @@map("doctors")
}
