generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Doctor {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  clinicLocation String
  degree         String
  description    String
  experience     String
  name           String
  opdTime        String
  post           String
  specialization String
  docImageUrl    String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("doctors")
}
